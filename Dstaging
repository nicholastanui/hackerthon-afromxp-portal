## STAGE 1: Build
FROM node:14.16.1-alpine3.10 AS build
MAINTAINER ntanui@safaricom.co.ke
WORKDIR /sikapa
COPY package*.json ./
RUN npm install --silent
RUN npm audit fix
COPY . .
RUN npm run dev

## STAGE 2: Run
FROM nginx:1.18.0-alpine
## Remove default nginx website
RUN rm -rf /etc/nginx/conf.d/*
COPY nginx/configs/sikapa.conf /etc/nginx/conf.d/
COPY certs/sikapa.key.pem /etc/nginx/conf.d/
COPY certs/sikapa.fullchain.pem /etc/nginx/conf.d/
COPY certs/sikapa.chain.pem /etc/nginx/conf.d/
COPY certs/afro-mxp.dhparams.pem /etc/nginx/conf.d/
RUN rm -rf /usr/share/nginx/html/*
## From 'builder' stage copy over the artifacts in dist folder to default nginx public folder
COPY --from=build /sikapa/dist/sikapa /usr/share/nginx/html/sikapa
CMD ["nginx", "-g", "daemon off;"]
